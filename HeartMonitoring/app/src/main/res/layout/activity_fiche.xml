<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/ficheId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Fiche patient"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
      >

        <TextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Nom"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Nom1"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
      >

        <TextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Prenom"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastname"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Prenom1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Age"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/old"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Age1"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
      >

        <TextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Email"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="228dp"
            android:layout_height="36dp"
            android:text="Email1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
      >

        <TextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Maladie"
            android:textStyle="bold"
           />

        <TextView
            android:id="@+id/seek"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Maladie1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
     >

        <TextView
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Phone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="Phone1"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/ficheId1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Historique de rÃ©levement"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"

        android:layout_height="338dp">

        <TableLayout

            android:id="@+id/tableSensors"

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:padding="0dp"

            android:stretchColumns="*"

            >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView android:text="avg"
                    android:background="#ffffff"
                    android:padding="20px"
                    android:layout_marginRight="2px"
                    android:layout_marginTop="2px"
                    android:textStyle="bold"/>
                <TextView android:text="bmp"
                    android:background="#ffffff"
                    android:padding="20px"
                    android:layout_marginRight="2px"
                    android:layout_marginTop="2px"
                    android:textStyle="bold"/>
                <TextView android:text="ir"
                    android:background="#ffffff"
                    android:padding="20px"
                    android:layout_marginRight="2px"
                    android:layout_marginTop="2px"
                    android:textStyle="bold"/>

            </TableRow>


        </TableLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/export"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:text="Envoyer" />

        <Button
            android:id="@+id/Exit"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:text="Quitter" />


    </LinearLayout>




</LinearLayout>